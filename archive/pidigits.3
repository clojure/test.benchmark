(definterface IGmpInteger
  (^long getPointer [])
  (^void set [^int value])
  (^void mul [^pidigits.IGmpInteger src ^int value])
  (^void add [^pidigits.IGmpInteger op1 ^pidigits.IGmpInteger op2])
  (^void div [^pidigits.IGmpInteger op1 ^pidigits.IGmpInteger op2])
  (^int intValue [])
  (^double doubleValue))

;; Extract one digit.
(defn ^long extract [^long j ^objects GI]
  (let [q ^pidigits.IGmpInteger (aget GI 0) r ^pidigits.IGmpInteger (aget GI 1) s ^pidigits.IGmpInteger (aget GI 2) t ^pidigits.IGmpInteger (aget GI 3) u ^pidigits.IGmpInteger (aget GI 4) v ^pidigits.IGmpInteger (aget GI 5) w ^pidigits.IGmpInteger (aget GI 6)] 
    (.mul u q j)
    (.add u u r)
    (.mul v s j)
    (.add v v t)
    (.div w u v)
    (.intValue w)))

;; Print one digit. Returns 1 for the last digit.
(defn prdigit [^long y ^long i ^long n]
  (printf "%s" y) 
  (if (or (= (mod i 10) 0) (= i n))
    (do
      (if (not= (mod i 10) 0)
        (printf "%s" (apply str (repeat (- 10 (mod i 10)) " "))))
      (printf "\t:%s\n" i)))
  (= i n)) 

;; Generate successive digits of PI.
(defn ^long digits [^long n ^objects GI]
  (let [q ^pidigits.IGmpInteger (aget GI 0) r ^pidigits.IGmpInteger (aget GI 1) s ^pidigits.IGmpInteger (aget GI 2) t ^pidigits.IGmpInteger (aget GI 3) u ^pidigits.IGmpInteger (aget GI 4) v ^pidigits.IGmpInteger (aget GI 5) w ^pidigits.IGmpInteger (aget GI 6)] 
    (do
      (.set q 1)
      (.set r 0)
      (.set s 0)
      (.set t 1)
      (.set u 0)
      (.set v 0)
      (.set w 0)
      (loop [k 1 i 1]
        (let [y (extract 3 GI)]
          (if (= y (extract 4 GI))
            (if (prdigit y i n)
              k
              (do 
                (.mul u r 0)
                (.mul r r 10)
                (.mul v t (* -10 y))
                (.add r r v)
                (.mul t t 1)
                (.add t t u)
                (.mul s s 1)
                (.mul u q 0)
                (.add s s u)
                (.mul q q 10)
                (recur k (inc i))))
            (let [br (+ (* 4 k) 2)
                  bt (+ (* 2 k) 1)]
              (.mul r r bt)
              (.mul u q br)
              (.add r r u)
              (.mul u t 0)
              (.mul t t bt)
              (.mul v s br)
              (.add t t v)
              (.mul s s k)
              (.add s s u)
              (.mul q q k)
              (recur (inc k) i))))))))

